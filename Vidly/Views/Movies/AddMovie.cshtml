@model Vidly.ViewModels.MovieGenre


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Movie</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Please fix the following errors");

    <div class="form-group">

        @Html.LabelFor(x => x.Movie.Name)
        @Html.TextBoxFor(x => x.Movie.Name, new { @class = " form-control" })
        @Html.ValidationMessageFor(c => c.Movie.Name)

    </div>


    <div class="form-group">

        @Html.LabelFor(x => x.Movie.ReleaseDate)
        @Html.TextBoxFor(x => x.Movie.ReleaseDate, new { @class = " form-control" })
        @Html.ValidationMessageFor(c => c.Movie.ReleaseDate)


    </div>
    <div class="form-group">

        @Html.LabelFor(x => x.Movie.GenreId)
        @Html.DropDownListFor(x => x.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genres", new { @class = " form-control" })
        @Html.ValidationMessageFor(c => c.Movie.GenreId)

    </div>
    <div class="form-group">

        @Html.LabelFor(x => x.Movie.NumberInStocks)
        @Html.TextBoxFor(x => x.Movie.NumberInStocks, new { @class = " form-control", type = "number" })
        @Html.ValidationMessageFor(c => c.Movie.NumberInStocks)


    </div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>



}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}